<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import org.github.material.MaterialUtils;
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<!-- touch area -->
	<s:Rect left="0" right="0" top="0" bottom="0" >
		<s:fill>
			<s:SolidColor alpha="0" />
		</s:fill>
	</s:Rect>
	
	<!-- image -->
	<mx:Image top="{MaterialUtils.dp2px(12)}" left="{MaterialUtils.dp2px(16)}" width="{MaterialUtils.dp2px(24)}" height="{MaterialUtils.dp2px(24)}" source="@Embed(source='assets/images/ic_menu_black_48px.svg')" alpha="0.74"/>	
</s:Skin>
